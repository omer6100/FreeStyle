@using Microsoft.Ajax.Utilities
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Freestyle - @ViewBag.Title</title>

    @Styles.Render("~/Content/css")
    <script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/v/bs4/dt-1.10.21/datatables.min.css" />
    <script type="text/javascript" src="https://cdn.datatables.net/v/bs4/dt-1.10.21/datatables.min.js"></script>
    <script type="text/javascript" src="https://cdn.datatables.net/plug-ins/1.10.21/api/average().js"></script>
    @Scripts.Render("~/Scripts/ajax-last-fm.js")

</head>
<body>
<nav class="navbar navbar-expand-lg navbar-dark bg-primary" id="navbar">
    <a class="navbar-brand" href="~/">Freestyle</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarColor01">
        <ul class="navbar-nav mr-auto">
            <li class="nav-item">
                @Html.ActionLink("Albums", "Index", "Album", null, new { @class = "nav-link" })
            </li>
            <li class="nav-item">
                @Html.ActionLink("Artists", "Index", "Artist", null, new { @class = "nav-link" })
            </li>
            <li class="nav-item">
                @Html.ActionLink("Reviews", "Index", "Review", null, new { @class = "nav-link" })
            </li>
            <li class="nav-item">
                @Html.ActionLink("Users", "Index", "EndUser", null, new { @class = "nav-link" })
            </li>
            <li class="nav-item">
                @Html.ActionLink("AdvancedSearch", "Index", "AdvancedSearch", null, new { @class = "nav-link" })
            </li>
        </ul>

        @if (Session["Authorized"].IfNotNull(s=>s.Equals(true)))
        {
            @Html.Partial("User/UserPartialNav");
        }
        else
        {
            @Html.Partial("Guest/GuestPartialNav")
        }

    </div>
</nav>

<div class="container body-content">
    @RenderBody()
    <hr />
    <footer>
        <p>&copy; @DateTime.Now.Year -Freestyle</p>
    </footer>
</div>

   
</body>

@RenderSection("scripts", required: false)
</html>
