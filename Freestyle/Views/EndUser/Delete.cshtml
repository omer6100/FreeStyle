@model Freestyle.Models.EndUser

@{
    ViewBag.Title = "Delete @" + Model.Username + "'s Profile";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section>
    <h2>Delete @Html.ActionLink("@" + Model.Username, "Details", new { id = Model.Id })'s Profile</h2>

    <h4>Are you sure you want to delete this?</h4>
    <div>
        <hr />

        <h6>
            <b>@Html.DisplayNameFor(model => model.Username):</b> @Html.ActionLink(Model.Username, "Details", new { id = Model.Id })
        </h6>
        <br />

        <h6>
            <b>@Html.DisplayNameFor(model => model.Email):</b> @Html.DisplayFor(model => model.Email)
        </h6>
        <br />

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(model => model.Id)
            @Html.HiddenFor(model => model.Username)
            @Html.HiddenFor(model => model.Email)
            @Html.HiddenFor(model => model.Password)

            <div class="form-actions no-color">
                <input type="submit" value="Delete" class="btn btn-danger" /> |
                @Html.ActionLink("Back to @"+ Model.Username + "'s Page", "Details",new{id=Model.Id}, new { @class = "btn btn-secondary" })
            </div>
        }
    </div>
</section>
