@model Freestyle.Models.Artist

@{
    ViewBag.Title = "Delete " + Model.Name;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section>
    <h2>Delete @Html.ActionLink(Model.Name, "Details", new { id = Model.Id })</h2>

    <h4>Are you sure you want to delete this?</h4>
    <div>
        <hr />

        <h6>
            <b>@Html.DisplayNameFor(model => model.Name):</b> @Html.ActionLink(Model.Name, "Details", new { id = Model.Id })
        </h6>
        <br />

        <h6>
            <b>@Html.DisplayNameFor(model => model.OriginCountry):</b> @Html.DisplayFor(model => model.OriginCountry)
        </h6>
        <br />

        <h6>
            <b>@Html.DisplayNameFor(model => model.AvgScore):</b> @Html.DisplayFor(model => model.AvgScore)
        </h6>
        <br />

        <h6>
            <b>@Html.DisplayNameFor(model => model.PageViews):</b> @Html.DisplayFor(model => model.PageViews)
        </h6>
        <br />


        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(model => model.Id)
            @Html.HiddenFor(model => model.Name)
            @Html.HiddenFor(model => model.OriginCountry)
            @Html.HiddenFor(model => model.AvgScore)
            @Html.HiddenFor(model => model.PageViews)

            <div class="form-actions no-color">
                <input type="submit" value="Delete" class="btn btn-danger" /> |
                @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-secondary" })
            </div>
        }
    </div>
</section>
