            function (json) {
                var i = Math.floor(Math.random() * 10) % 10;
                var src = json.topalbums.album[i].image[3]["#text"];
                var alt = name + "Picture";

                $("#rec-artist-img").html("<img class='index-album-art' alt = " + alt + " src = " + src + ">");

            });

    });
</script>

