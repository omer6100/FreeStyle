@model Freestyle.Models.Album

@{
                /**/

                ViewBag.Title = "Edit " + Model.Title + " by " + Model.Artist;
                Layout = "~/Views/Shared/_Layout.cshtml";
}

<section>
    <h2>Edit @Html.ActionLink(Model.Title, "Details", new { id = Model.Id }) by @Html.ActionLink(Model.Artist, "Details", "Artist", new { id = Model.ArtistId }, null)</h2>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.Id)
            @Html.HiddenFor(model => model.ArtistId)
            @Html.HiddenFor(model => model.Title)
            @Html.HiddenFor(model => model.Artist)
            @Html.HiddenFor(model => model.AvgScore)


            <div class="form-group">
                @Html.LabelFor(model => model.ReleaseDate, htmlAttributes: new { @class = "control-label col-md-2 font-weight-bold" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.ReleaseDate, new { htmlAttributes = new { @class = "form-control", placeholder = "Required", id = "release-dat" } })
                    @Html.ValidationMessageFor(model => model.ReleaseDate, null, new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Genre, htmlAttributes: new { @class = "control-label col-md-2 font-weight-bold" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Genre, new { htmlAttributes = new { @class = "form-control", placeholder = "Required" } })
                    @Html.ValidationMessageFor(model => model.Genre, null, new { @class = "text-danger" })
                </div>
            </div>


            <div class="form-group">
                @Html.LabelFor(model => model.PageViews, htmlAttributes: new { @class = "control-label col-md-2 font-weight-bold" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.PageViews, new { htmlAttributes = new { @class = "form-control", placeholder = "Required" } })
                    @Html.ValidationMessageFor(model => model.PageViews, null, new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Save" class="btn btn-primary" />
                    @Html.ActionLink("Back to " + Model.Title + " by " + Model.Artist, "Details", new { id = Model.Id }, new { @class = "btn btn-secondary" })
                </div>
            </div>
        </div>
    }
</section>

@section Scripts{
    <script>
        $(document).ready(function() {
            $("#release-date").attr("value", "");
        });
    </script>
}