@model Freestyle.Models.Album

@{
    ViewBag.Title = "Delete " + Model.Title + " by " + Model.Artist;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section>
    <h2>
        Delete @Html.ActionLink(Model.Title, "Details", new { id = Model.Id }) by
        @Html.ActionLink(Model.Artist, "Details", "Artist", new { id = Model.ArtistId }, null)
    </h2>
    <h4>Are you sure you want to delete this?</h4>
    <div>
        <hr />

        <h6>
            <b>@Html.DisplayNameFor(model => model.Title):</b> @Html.ActionLink(Model.Title, "Details", new { id = Model.Id })
        </h6>
        <br />

        <h6>
            <b>@Html.DisplayNameFor(model => model.Artist):</b> @Html.ActionLink(Model.Artist, "Details", "Artist", new { id = Model.ArtistId }, null)
        </h6>
        <br />

        <h6>
            <b>@Html.DisplayNameFor(model => model.ReleaseDate):</b>  @Html.DisplayFor(model => model.ReleaseDate)
        </h6>
        <br />

        <h6>
            <b>@Html.DisplayNameFor(model => model.Genre):</b>  @Html.DisplayFor(model => model.Genre)
        </h6>
        <br />

        <h6>
            <b>@Html.DisplayNameFor(model => model.AvgScore):</b>  @Html.DisplayFor(model => model.AvgScore)
        </h6>
        <br />

        <h6>
            <b>@Html.DisplayNameFor(model => model.PageViews):</b>  @Html.DisplayFor(model => model.PageViews)
        </h6>
        <br />


        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(model=>model.Id)
            @Html.HiddenFor(model=>model.Title)
            @Html.HiddenFor(model=>model.ArtistId)
            @Html.HiddenFor(model=>model.Artist)
            @Html.HiddenFor(model=>model.ReleaseDate)
            @Html.HiddenFor(model=>model.AvgScore)
            @Html.HiddenFor(model=>model.PageViews)

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            @Html.ActionLink("Back to List", "Index", null, new{@class="btn btn-secondary"})
        </div>
        }
    </div>
</section>