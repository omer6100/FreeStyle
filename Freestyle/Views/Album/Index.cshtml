@model IEnumerable<Freestyle.Models.Album>

@{
                /**/

                ViewBag.Title = "Albums";
                Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>All Albums</h1>

<section>
    @Html.Partial("AlbumTablePartialView", Model)
</section>



@section Scripts{
    <script type="text/javascript">
        $(document).ready(function() {
            $('#albums-table').DataTable({
                "order": [0, 'asc'],
                "language": {
                    "zeroRecords": 'No Matching Records Found. Would You Like To @Html.ActionLink("Create a New Album", "Create")?'
                }
            });
        });
    </script>

}
