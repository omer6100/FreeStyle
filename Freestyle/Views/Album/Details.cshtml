        .attr("text-anchor", "middle")
        .attr("stroke", "black")
        .text("Review Score");

    g.append("g")
        .call(d3.axisLeft(yScale).tickFormat(function (d) {
                return  d;
            })
            .ticks(10))
        .append("text")
        .attr("x", -25)
        .attr("y", 55)
        .attr("dy", "-5.1em")
        .attr("text-anchor", "middle")
        .attr("stroke", "black")
        .text("#");

    g.selectAll(".bar")
