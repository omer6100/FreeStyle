@using Freestyle.Models
@model Freestyle.Models.Album

@{
    /**/

    ViewBag.Title = @Model.Title + " by " + @Model.Artist;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-4">
        <section id="img"></section>
        <hr />
        <section id="score-slider">
            <h2 class="rating-avg"></h2>
            <div class="progress">
                <div class="progress-bar" id="score-progress"></div>
            </div>
        </section>
        <section id="review-stats">
            <h4>Statistics</h4>
        </section>
        <section id="write-review">
            <h4>Write a Review</h4>
            @* @Html.Partial("Review/WriteReviewPartial"); *@
        </section>

    </div>
    <div class="col-md-8">
        <section id="title">
            <h1>
                @Html.ActionLink(@Model.Title, "Details", "Album", new { id = @Model.Id }, null) by
                @Html.ActionLink(@Model.Artist, "Details", "Artist", new { id = @Model.ArtistId }, null)
            </h1>
            <h5>@Model.Genre Album, Released on @Model.ReleaseDate.ToString("D")</h5>
        </section>
        <hr />
        <h3>Synopsis</h3>
        <section id="bio"></section>
        <h3>Track List</h3>
        <section>
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Track Name</th>
                        <th>Length</th>
                    </tr>
                </thead>
                <tbody id="tracklist"></tbody>
                <tfoot id="totalDuration"></tfoot>
            </table>
        </section>
    </div>
</div>


@section Scripts
{
    <script>
        $(".rating-avg").append((Math.round(@Model.AvgScore * 100) / 100).toFixed(1));
    </script>
    <script>
        var scorePercent = @Model.AvgScore * 10;
        $("#score-progress").attr("style", "width:" + scorePercent + "%");
    </script>
    <script>
        $(document).ready(function () {
            var title = "@Model.Title";
            var artistName = "@Model.Artist";
            getAlbumInfo(title, artistName);
        });
    </script>
    
}

