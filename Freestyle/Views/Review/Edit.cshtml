@model Freestyle.Models.Review

@{
    ViewBag.Title = "Edit @" + Model.Username + "'s Review of " + Model.AlbumTitle; 
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section>
    <h2>
        Edit @Html.ActionLink("@" + Model.Username, "Details", "EndUser", new { id = Model.UserId }, null)'s
        @Html.ActionLink("Review", "Details", new { id = Model.Id })
        of @Html.ActionLink(Model.AlbumTitle, "Details", "Album", new{id=Model.AlbumId},null)
    </h2>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)
        @Html.HiddenFor(model => model.UserId)
        @Html.HiddenFor(model => model.Username)
        @Html.HiddenFor(model => model.AlbumId)
        @Html.HiddenFor(model => model.AlbumTitle)

        <div class="form-group">
            @Html.LabelFor(model => model.Text, new { @class = "control-label col-md-2 font-weight-bold" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Text, new { htmlAttributes = new { @class = "form-control", placeholder="Required" } })
                @Html.ValidationMessageFor(model => model.Text, null, new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Score, new { @class = "control-label col-md-2  font-weight-bold" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Score, new { htmlAttributes = new { @class = "form-control", placeholder="Required" } })
                @Html.ValidationMessageFor(model => model.Score, null, new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-primary" />
                @Html.ActionLink("Back to the Review", "Details", new { id = Model.Id }, new { @class = "btn btn-secondary" })
            </div>
        </div>
    </div>
    }
</section>

