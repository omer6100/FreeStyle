@model IEnumerable<Freestyle.Models.Review>

@{
    ViewBag.Title = "Review Search Results";
}

<section>
    <h2>Search Results</h2>
    @Html.Partial("Tables/ReviewTablePartialView", Model)
</section>

@section Scripts{
    <script type="text/javascript">
        $(document).ready(function() {
            $('#review-table').DataTable({
                
                "language": {
                    "zeroRecords": 'No Matching Records Found.<br>Would You Like To @Html.ActionLink("Write Your Own Review", "Create")?'
                },
                "columnDefs": [
                    { "targets": 2, "type": "num" },
                    { "targets": 3, "orderable": false }
                ]
    
            });
        });
    </script>
    }