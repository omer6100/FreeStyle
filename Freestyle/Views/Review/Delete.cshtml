@model Freestyle.Models.Review

@{
    ViewBag.Title = "Delete @" + Model.Username + "'s Review of " + Model.AlbumTitle;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section>
    <h2>
        Delete @Html.ActionLink("@" + Model.Username, "Details", "EndUser", new { id = Model.UserId }, null)'s
        @Html.ActionLink("Review", "Details", new { id = Model.Id })
        of @Html.ActionLink(Model.AlbumTitle, "Details")
    </h2>

    <h4>Are you sure you want to delete this?</h4>
    <div>
        <hr />
        <h6>
            <b>@Html.DisplayNameFor(model => model.Username):</b>
            @Html.ActionLink("@" + Model.Username, "Details", "EndUser", new { id = Model.UserId }, null)
        </h6>
        <br />

        <h6>
            <b>@Html.DisplayNameFor(model => model.AlbumTitle):</b>
            @Html.ActionLink(Model.AlbumTitle, "Details", "Album", new { id = Model.AlbumId }, null)
        </h6>
        <br />

        <h6>
            <b>@Html.DisplayNameFor(model => model.Text):</b> @Html.DisplayFor(model => model.Text)
        </h6>
        <br />

        <h6>
            <b>@Html.DisplayNameFor(model => model.Score):</b> @Html.DisplayFor(model => model.Score)
        </h6>
        <br />

        @using (Html.BeginForm())
        {

            @Html.AntiForgeryToken()
            @Html.HiddenFor(model => model.Id)
            @Html.HiddenFor(model => model.UserId)
            @Html.HiddenFor(model => model.Username)
            @Html.HiddenFor(model => model.AlbumId)
            @Html.HiddenFor(model => model.AlbumTitle)
            @Html.HiddenFor(model => model.Text)
            @Html.HiddenFor(model => model.Score)

            <div class="form-actions no-color">
                <input type="submit" value="Delete" class="btn btn-danger" /> |
                @Html.ActionLink("Back to List", "Index", new { @class = "btn btn-secondary" })
            </div>
        }
    </div>
</section>